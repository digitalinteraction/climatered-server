{
  "name": "climatered-server",
  "version": "2.1.6",
  "private": true,
  "repository": "digitalinteraction/climatered-server",
  "author": "robb-j",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "test": "jest --runInBand",
    "coverage": "jest --runInBand --coverage",
    "build": "tsc",
    "lint": "tsc --noEmit",
    "format": "prettier --write '**/*.{js,json,css,md,ts,tsx}'",
    "preversion": "npm run test -s && npm run build",
    "postversion": "git push --follow-tags",
    "dev": "node -r ts-node/register -r dotenv/config src/cli.ts",
    "debug": "node --inspect-brk -r ts-node/register -r dotenv/config src/cli.ts",
    "readme-toc": "md-toc -i",
    "start": "npm run -s dev -- serve --migrate"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.9.0",
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.1.1",
    "@openlab/deconf-api-toolkit": "^3.0.0",
    "@openlab/deconf-shared": "^3.0.0",
    "@sendgrid/mail": "^7.4.6",
    "cors": "^2.8.5",
    "debug": "^4.3.2",
    "dedent": "^0.7.0",
    "dotenv": "^10.0.0",
    "got": "^11.8.2",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-json": "^2.0.2",
    "ms": "^2.1.3",
    "redis": "^3.1.2",
    "socket.io": "^4.2.0",
    "socket.io-redis": "^6.1.1",
    "superstruct": "^0.15.2",
    "valid-env": "^1.1.1",
    "yargs": "^17.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@robb_j/md-toc": "^0.3.3",
    "@types/debug": "^4.1.7",
    "@types/dedent": "^0.7.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.3",
    "@types/koa-json": "^2.0.20",
    "@types/koa__cors": "^3.0.3",
    "@types/koa__router": "^8.0.7",
    "@types/node": "^16.7.10",
    "@types/redis": "^2.8.31",
    "@types/yargs": "^17.0.2",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2",
    "yorkie": "^2.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "gitHooks": {
    "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
